<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 20
        spacing: 15
        Camera:
            size_hint_y: 0.8
            id : camera
            resolution: (1280, 720)
            play: False
        Button:
            id : camera_button
            text: 'Start Camera'
            size_hint_y: 0.1
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
        Button:
            text: 'Capture'
            size_hint_y: 0.1
            on_press: root.capture()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'


<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 20
        spacing: 15
        Image:
            size_hint_y: 0.7
            id : img
            resolution: (1280, 720)
            play: False
        Button:
            id : create_link
            text: 'Create Link'
            size_hint_y: 0.1
            on_press: root.create_link()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
        Label:
            id: label
            text: ''
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'
            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'


<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'

    ImageScreen:
        id: image_screen
        name: 'image_screen'
